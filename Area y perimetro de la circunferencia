#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdio.h"
#define pi 3.141592
 
using namespace std;


void main()
{
	float perimetro, r,area ;

	cout<<"Introduzca r"<<endl;
	cin>>r;
	
	perimetro= 2* pi* r; 
	area= r*r*pi;
	cout<<"El area es:"<<area<<endl;
	cout<<"El perimetro es:"<<endl;
	cout<<perimetro;

	getch();


}







Proceso areayperimetrodelacircunferencia 
	Escribir "Ingrese el radio"
	Leer r
	Area<-r*r*3.1416
	Escribir "El area es:" Area
	perimetro<-2*r*3.1416
	Escribir "El perimetro es:" perimetro
FinProceso
